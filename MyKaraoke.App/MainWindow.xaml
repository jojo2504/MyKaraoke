<Window x:Class="MyKaraokeApp.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:MyKaraokeApp"
		Title="Karaoke Studio Pro"
		Height="800"
		Width="1200"
		WindowStartupLocation="CenterScreen"
		Background="#0E0E2A">

	<Window.Resources>
		<!-- Converters -->
		<local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

		<Storyboard x:Key="LyricFadeInOut">
			<DoubleAnimation Storyboard.TargetProperty="Opacity"
							 From="0"
					To="1"
							 Duration="0:0:0.5"
							 AutoReverse="True"
							 RepeatBehavior="1x"/>
		</Storyboard>

		<Style x:Key="DreamMenuItem"
			   TargetType="MenuItem">
			<Setter Property="Background"
					Value="Transparent"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="Margin"
					Value="0,4"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="MenuItem">
						<Border x:Name="Border"
								Background="{TemplateBinding Background}"
								Margin="0">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="32"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<!-- Icon container with matching background -->
								<ContentPresenter x:Name="Icon"
												  Content="{TemplateBinding Icon}"
												  Margin="8,0,0,0"
												  VerticalAlignment="Center"
												  HorizontalAlignment="Center"/>
								<ContentPresenter Grid.Column="1"
												  ContentSource="Header"
												  Margin="8,8,8,8"
												  VerticalAlignment="Center"/>
							</Grid>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver"
									 Value="True">
								<Setter Property="Background"
										Value="#334B4DED"/>
								<!-- 33 at start makes it 20% opacity -->
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Button Style -->
		<Style x:Key="DreamButton"
			   TargetType="Button">
			<Setter Property="Background"
					Value="#3A3A5A"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="BorderThickness"
					Value="0"/>
			<Setter Property="Padding"
					Value="10,5"/>
			<Setter Property="FontSize"
					Value="13"/>
			<Setter Property="Cursor"
					Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
								CornerRadius="8"
								BorderThickness="0"
								Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center"
											  VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Setter Property="Background"
							Value="#4B4DED"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- TextBox Style -->
		<Style x:Key="DreamTextBox"
			   TargetType="TextBox">
			<Setter Property="Background"
					Value="#1E1E3A"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="Padding"
					Value="10,8"/>
			<Setter Property="BorderBrush"
					Value="#3A3A5A"/>
			<Setter Property="BorderThickness"
					Value="1"/>
			<Setter Property="FontSize"
					Value="13"/>
			<Setter Property="CaretBrush"
					Value="White"/>
			<Style.Triggers>
				<Trigger Property="IsFocused"
						 Value="True">
					<Setter Property="BorderBrush"
							Value="#4B4DED"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- ListBox Style -->
		<Style x:Key="DreamListBox"
			   TargetType="ListBox">
			<Setter Property="Background"
					Value="#1E1E3A"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="BorderBrush"
					Value="#3A3A5A"/>
			<Setter Property="BorderThickness"
					Value="1"/>
			<Setter Property="FontSize"
					Value="13"/>
			<Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
					Value="Disabled"/>
			<Setter Property="ScrollViewer.VerticalScrollBarVisibility"
					Value="Auto"/>
		</Style>

		<Style TargetType="ListBoxItem"
			   x:Key="DreamListBoxItem">
			<Setter Property="Background"
					Value="Transparent"/>
			<Setter Property="Foreground"
					Value="White"/>
			<Setter Property="Padding"
					Value="8,5"/>
			<Setter Property="Cursor"
					Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ListBoxItem">
						<Border x:Name="Border"
								Background="{TemplateBinding Background}"
								Padding="{TemplateBinding Padding}">
							<ContentPresenter VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver"
									 Value="True">
								<Setter Property="Background"
										Value="#334B4DED"/>
							</Trigger>
							<Trigger Property="IsSelected"
									 Value="True">
								<Setter Property="Background"
										Value="#4B4DED"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Slider Style -->
		<Style x:Key="DreamSlider"
			   TargetType="Slider">
			<Setter Property="Margin"
					Value="0,5"/>
			<Setter Property="Foreground"
					Value="#4B4DED"/>
			<Setter Property="Background"
					Value="Transparent"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Setter Property="Cursor"
							Value="Hand"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="DreamContextMenu"
			   TargetType="ContextMenu">
			<Setter Property="Background"
					Value="#EA1E1E3A"/>
			<Setter Property="BorderBrush"
					Value="#3A3A5A"/>
			<Setter Property="BorderThickness"
					Value="1"/>
			<Setter Property="Width"
					Value="200"/>
			<Setter Property="Height"
					Value="160"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ContextMenu">
						<Border Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="8">
							<ItemsPresenter Margin="0"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter Property="ItemContainerStyle"
					Value="{StaticResource DreamMenuItem}"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar: Song Upload and Controls -->
		<Border Grid.Column="0"
				Background="#1E1E3A"
				Margin="10"
				CornerRadius="8">
			<StackPanel Margin="15">
				<TextBlock Text="Upload Song"
						   FontSize="18"
						   FontWeight="SemiBold"
						   Foreground="White"
						   Margin="0,0,0,15"/>

				<!-- Song Name TextBox with Placeholder -->
				<Grid>
					<TextBox x:Name="SongNameTextBox"
							 Style="{StaticResource DreamTextBox}"
							 Height="40"
							 Margin="0,0,0,15"/>
					<TextBlock Text="Enter Song Name"
							   Foreground="#9E9E9E"
							   Margin="10,8,0,0"
							   FontSize="13"
							   IsHitTestVisible="False"
							   Visibility="{Binding Text, ElementName=SongNameTextBox, 
                              Converter={StaticResource StringToVisibilityConverter}}"/>
				</Grid>

				<!-- Artist Name TextBox with Placeholder -->
				<Grid>
					<TextBox x:Name="ArtistNameTextBox"
							 Style="{StaticResource DreamTextBox}"
							 Height="40"
							 Margin="0,0,0,15"/>
					<TextBlock Text="Enter Artist Name"
							   Foreground="#9E9E9E"
							   Margin="10,8,0,0"
							   FontSize="13"
							   IsHitTestVisible="False"
							   Visibility="{Binding Text, ElementName=ArtistNameTextBox, 
                              Converter={StaticResource StringToVisibilityConverter}}"/>
				</Grid>

				<Button x:Name="VocalUploadButton"
						Style="{StaticResource DreamButton}"
						Content="Upload Vocal Track"
						Height="40"
						Margin="0,0,0,10"/>

				<TextBlock x:Name="VocalFileNameText"
						   Text="No vocal file selected"
						   Margin="0,0,0,15"
						   Foreground="#9E9E9E"/>

				<Button x:Name="MusicUploadButton"
						Style="{StaticResource DreamButton}"
						Content="Upload Music Track"
						Height="40"
						Margin="0,0,0,10"/>

				<TextBlock x:Name="MusicFileNameText"
						   Text="No music file selected"
						   Margin="0,0,0,15"
						   Foreground="#9E9E9E"/>

				<Button x:Name="ConfirmUploadButton"
						Style="{StaticResource DreamButton}"
						Background="#4B4DED"
						Content="Confirm Upload"
						Height="40"
						Margin="0,0,0,20"/>

				<!-- Volume Controls -->
				<TextBlock Text="Volume Controls"
						   FontSize="16"
						   FontWeight="SemiBold"
						   Foreground="White"
						   Margin="0,10,0,15"/>

				<StackPanel>
					<TextBlock Text="General Volume"
							   Foreground="#9E9E9E"
							   FontSize="13"
							   Margin="0,0,0,5"/>
					<Slider x:Name="GeneralVolumeSlider"
							Style="{StaticResource DreamSlider}"
							Minimum="0"
							Maximum="100"
							Value="50"/>

					<TextBlock Text="Vocal Volume"
							   Foreground="#9E9E9E"
							   FontSize="13"
							   Margin="0,15,0,5"/>
					<Slider x:Name="VocalVolumeSlider"
							Style="{StaticResource DreamSlider}"
							Minimum="0"
							Maximum="100"
							Value="50"/>

					<TextBlock Text="Music Volume"
							   Foreground="#9E9E9E"
							   FontSize="13"
							   Margin="0,15,0,5"/>
					<Slider x:Name="MusicVolumeSlider"
							Style="{StaticResource DreamSlider}"
							Minimum="0"
							Maximum="100"
							Value="50"/>
				</StackPanel>
			</StackPanel>
		</Border>

		<!-- Main Content Area -->
		<Grid Grid.Column="1"
			  Margin="0,10,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!-- Left Side: Lyrics and Song Library -->
				<Grid Grid.Column="0"
					  Margin="0,0,10,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="3*"/>
					</Grid.RowDefinitions>

					<!-- Lyrics Display -->
					<Border Grid.Row="0"
							Background="#1E1E3A"
							BorderBrush="#3A3A5A"
							BorderThickness="1"
							CornerRadius="8"
							Margin="0,0,0,10">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>

							<!-- Header with Maximize Button -->
							<Grid Grid.Row="0"
								  Background="#2A2A4A">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<TextBlock Text="Current Lyrics"
										   Foreground="White"
										   FontSize="16"
										   FontWeight="SemiBold"
										   Margin="15,10"/>

								<Button x:Name="MaximizeLyricsButton"
										Grid.Column="1"
										Style="{StaticResource DreamButton}"
										Content="🗖"
										Width="40"
										Height="40"
										Margin="10"
										Click="MaximizeLyricsButton_Click"/>
							</Grid>

							<!-- Two-Line Lyric Display with Animation -->
							<Grid Grid.Row="1"
								  Margin="15"
								  VerticalAlignment="Center">
								<TextBlock x:Name="CurrentLyricTextBlock"
										   Text="Line 1"
										   FontSize="32"
										   TextAlignment="Center"
										   Foreground="White"
										   Opacity="0"
										   Margin="0,-10,0,0"/>
								<TextBlock x:Name="NextLyricTextBlock"
										   Text="Line 2"
										   FontSize="32"
										   TextAlignment="Center"
										   Foreground="White"
										   Opacity="0"
										   Margin="0,70,0,0"/>
							</Grid>
						</Grid>
					</Border>

					<!-- Song Library -->
					<Border Grid.Row="1"
							Background="#1E1E3A"
							BorderBrush="#3A3A5A"
							BorderThickness="1"
							CornerRadius="8">
						<DockPanel Margin="15">
							<TextBlock Text="Song Library"
									   DockPanel.Dock="Top"
									   FontSize="16"
									   FontWeight="SemiBold"
									   Foreground="White"
									   Margin="0,0,0,15"/>

							<ListBox x:Name="DatabaseSongsListView"
									 Style="{StaticResource DreamListBox}">
								<ListBox.ItemContainerStyle>
									<Style TargetType="ListBoxItem">
										<Setter Property="Background"
												Value="Transparent"/>
										<Setter Property="Foreground"
												Value="White"/>
										<Setter Property="Padding"
												Value="8,5"/>
										<Setter Property="Cursor"
												Value="Hand"/>
										<Setter Property="Template">
											<Setter.Value>
												<ControlTemplate TargetType="ListBoxItem">
													<Border x:Name="Border"
															Background="{TemplateBinding Background}"
															Padding="{TemplateBinding Padding}">
														<ContentPresenter VerticalAlignment="Center"/>
													</Border>
													<ControlTemplate.Triggers>
														<Trigger Property="IsMouseOver"
																 Value="True">
															<Setter TargetName="Border"
																	Property="Background"
																	Value="#334B4DED"/>
														</Trigger>
													</ControlTemplate.Triggers>
												</ControlTemplate>
											</Setter.Value>
										</Setter>
									</Style>
								</ListBox.ItemContainerStyle>

								<ListBox.ItemTemplate>
									<DataTemplate>
										<StackPanel Orientation="Vertical"
													Margin="5">
											<TextBlock Text="{Binding Title}"
													   Foreground="White"
													   FontSize="13"
													   Margin="0,0,10,0"/>
											<TextBlock Text="{Binding Artist}"
													   Foreground="#9E9E9E"
													   FontSize="13"/>
										</StackPanel>
									</DataTemplate>
								</ListBox.ItemTemplate>

								<ListBox.ContextMenu>
									<ContextMenu Style="{StaticResource DreamContextMenu}">
										<MenuItem Header="Play Now"
												  Click="PlayNow_Click"
												  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
											<MenuItem.Icon>
												<Image Source="assets/play_icon.png"
													   Width="20"
													   Height="20"/>
											</MenuItem.Icon>
										</MenuItem>
										<MenuItem Header="Add to Playlist"
												  Click="AddToPlaylist_Click"
												  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
											<MenuItem.Icon>
												<Image Source="assets/add_playlist_icon.png"
													   Width="20"
													   Height="20"/>
											</MenuItem.Icon>
										</MenuItem>
										<MenuItem Header="Modify Song"
												  Click="ModifySong_Click"
												  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
											<MenuItem.Icon>
												<Image Source="assets/settings_icon.png"
													   Width="20"
													   Height="20"/>
											</MenuItem.Icon>
										</MenuItem>
										<MenuItem Header="Remove"
												  Click="RemoveSong_Click"
												  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
											<MenuItem.Icon>
												<Image Source="assets/delete_icon.png"
													   Width="20"
													   Height="20"/>
											</MenuItem.Icon>
										</MenuItem>
									</ContextMenu>
								</ListBox.ContextMenu>
							</ListBox>
						</DockPanel>
					</Border>
				</Grid>

				<!-- Current Playlist -->
				<Border Grid.Column="1"
						Background="#1E1E3A"
						BorderBrush="#3A3A5A"
						BorderThickness="1"
						CornerRadius="8">
					<DockPanel Margin="15">
						<TextBlock Text="Current Playlist"
								   DockPanel.Dock="Top"
								   FontSize="16"
								   FontWeight="SemiBold"
								   Foreground="White"
								   Margin="0,0,0,15"/>

						<ListBox x:Name="SongListView"
								 Style="{StaticResource DreamListBox}"
								 ItemsSource="{Binding Songs}">
							<ListBox.ItemContainerStyle>
								<Style TargetType="ListBoxItem">
									<Setter Property="Background"
											Value="Transparent"/>
									<Setter Property="Foreground"
											Value="White"/>
									<Setter Property="Padding"
											Value="8,5"/>
									<Setter Property="Cursor"
											Value="Hand"/>
									<Setter Property="Template">
										<Setter.Value>
											<ControlTemplate TargetType="ListBoxItem">
												<Border x:Name="Border"
														Background="{TemplateBinding Background}"
														Padding="{TemplateBinding Padding}">
													<ContentPresenter VerticalAlignment="Center"/>
												</Border>
												<ControlTemplate.Triggers>
													<!-- Hover Effect -->
													<Trigger Property="IsMouseOver"
															 Value="True">
														<Setter TargetName="Border"
																Property="Background"
																Value="#334B4DED"/>
													</Trigger>
													<!-- Remove Selection Color -->
													<Trigger Property="IsSelected"
															 Value="True">
														<Setter TargetName="Border"
																Property="Background"
																Value="Transparent"/>
													</Trigger>
												</ControlTemplate.Triggers>
											</ControlTemplate>
										</Setter.Value>
									</Setter>
								</Style>
							</ListBox.ItemContainerStyle>

							<ListBox.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal"
												Margin="5">
										<TextBlock Text="{Binding Title}"
												   Foreground="White"
												   FontSize="13"
												   Margin="0,0,10,0"/>
										<TextBlock Text="{Binding Artist}"
												   Foreground="#9E9E9E"
												   FontSize="13"/>
									</StackPanel>
								</DataTemplate>
							</ListBox.ItemTemplate>

							<ListBox.ContextMenu>
								<ContextMenu Style="{StaticResource DreamContextMenu}">
									<MenuItem Header="Remove"
											  Click="RemoveSong_Click"/>
								</ContextMenu>
							</ListBox.ContextMenu>
						</ListBox>
					</DockPanel>
				</Border>
			</Grid>

			<!-- Playback Controls -->
			<StackPanel Grid.Row="1"
						Orientation="Horizontal"
						HorizontalAlignment="Center"
						Margin="0,20,0,0">
				<Button x:Name="PlayButton"
						Style="{StaticResource DreamButton}"
						Content="Play"
						Width="120"
						Height="40"
						Margin="0,0,15,0"/>

				<Button x:Name="PauseResumeButton"
						Style="{StaticResource DreamButton}"
						Content="Pause/Resume"
						Width="120"
						Height="40"
						Margin="0,0,15,0"
						Click="PauseResume_Click"/>

				<Button x:Name="SkipButton"
						Style="{StaticResource DreamButton}"
						Content="Skip"
						Width="120"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>