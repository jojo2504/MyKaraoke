<Window x:Class="MyKaraokeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Karaoke Studio" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="CurrentSongTitle" Text="No song selected" />

        <!-- Sidebar: Song Upload and Controls -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="20">
            <StackPanel>
                <!-- Song Upload Section -->
                <TextBlock Text="Upload Song" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <TextBox x:Name="SongNameTextBox" 
                        Height="35" 
                        Margin="0,0,0,10">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button x:Name="VocalUploadButton" 
                        Content="Upload Vocal Track" 
                        Height="40" 
                        Margin="0,0,0,10"/>
                
                <TextBlock x:Name="VocalFileNameText" 
                           Text="No vocal file selected" 
                           Margin="0,0,0,10"/>
                
                <Button x:Name="MusicUploadButton" 
                        Content="Upload Music Track" 
                        Height="40" 
                        Margin="0,0,0,10"/>
                
                <TextBlock x:Name="MusicFileNameText" 
                           Text="No music file selected" 
                           Margin="0,0,0,10"/>
                
                <Button x:Name="ConfirmUploadButton"
                        Content="Confirm Upload" 
                        Height="40" 
                        Background="#4CAF50" 
                        Foreground="White"/>

                <!-- Volume Controls -->
                <TextBlock Text="Volume Controls" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,20,0,10"/>
                
                <StackPanel>
                    <TextBlock Text="General Volume"/>
                    <Slider x:Name="GeneralVolumeSlider" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="50"/>
                    
                    <TextBlock Text="Vocal Volume" Margin="0,10,0,0"/>
                    <Slider x:Name="VocalVolumeSlider" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="50"/>
                    
                    <TextBlock Text="Music Volume" Margin="0,10,0,0"/>
                    <Slider x:Name="MusicVolumeSlider" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="50"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content: Song Library and Playlist -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Song Library -->
                <Border Grid.Column="0" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Margin="0,0,10,0" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Song Library" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <ListView x:Name="DatabaseSongsListView">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}" Grid.Column="0"/>
                                        <Button Content="+" 
                                                Grid.Column="1" 
                                                Width="30"
                                                Click="AddToPlaylistButton_Click"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Current Playlist -->
                <Border Grid.Column="1" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Current Playlist" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <ListView x:Name="SongListView" 
                                  DisplayMemberPath="Title"/>
                        
                        <Button x:Name="DeleteSongButton" 
                                Content="Remove Selected" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Playback Controls -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="PlayButton" 
                        Content="Play" 
                        Width="100" 
                        Height="40" 
                        Margin="0,0,10,0"/>
                
                <Button x:Name="SkipButton" 
                        Content="Skip" 
                        Width="100" 
                        Height="40"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>