<Window x:Class="MyKaraokeApp.MainWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyKaraokeApp"
        Title="Karaoke Studio Pro"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#0E0E2A">
    <Window.Resources>
        <!-- Converters -->
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <local:WidthConverter x:Key="WidthConverter" />
        <Storyboard x:Key="LyricFadeInOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5"
                             AutoReverse="True"
                             RepeatBehavior="1x" />
        </Storyboard>
        <!-- Styles -->
        <Style x:Key="DreamMenuItem"
               TargetType="MenuItem">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Margin"
                    Value="0,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon"
                                                  Content="{TemplateBinding Icon}"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  Margin="8,8,8,8"
                                                  VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#334B4DED" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Button Style -->
        <Style x:Key="DreamButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#3A3A5A" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#4B4DED" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- TextBox Style -->
        <Style x:Key="DreamTextBox"
               TargetType="TextBox">
            <Setter Property="Background"
                    Value="#1E1E3A" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Padding"
                    Value="10,8" />
            <Setter Property="BorderBrush"
                    Value="#3A3A5A" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="CaretBrush"
                    Value="White" />
            <Style.Triggers>
                <Trigger Property="IsFocused"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#4B4DED" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ListBox Style -->
        <Style x:Key="DreamListBox"
               TargetType="ListBox">
            <Setter Property="Background"
                    Value="#1E1E3A" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#3A3A5A" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Auto" />
        </Style>
        <Style TargetType="ListBoxItem"
               x:Key="DreamListBoxItem">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Padding"
                    Value="8,5" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#334B4DED" />
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#4B4DED" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Slider Style -->
        <Style x:Key="DreamSlider"
               TargetType="Slider">
            <Setter Property="Margin"
                    Value="0,5" />
            <Setter Property="Foreground"
                    Value="#4B4DED" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Cursor"
                            Value="Hand" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DreamContextMenu"
               TargetType="ContextMenu">
            <Setter Property="Background"
                    Value="#EA1E1E3A" />
            <Setter Property="BorderBrush"
                    Value="#3A3A5A" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="Height"
                    Value="160" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ItemsPresenter Margin="0" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle"
                    Value="{StaticResource DreamMenuItem}" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Sidebar: Song Upload and Controls -->
        <Border Grid.Column="0"
                Background="#1E1E3A"
                Margin="10"
                CornerRadius="8">
            <StackPanel Margin="15">
                <TextBlock Text="Upload Song"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,15" />
                <!-- Song Name TextBox with Placeholder -->
                <Grid>
                    <TextBox x:Name="SongNameTextBox"
                             Style="{StaticResource DreamTextBox}"
                             Height="40"
                             Margin="0,0,0,15" />
                    <TextBlock Text="Enter Song Name"
                               Foreground="#9E9E9E"
                               Margin="10,8,0,0"
                               FontSize="13"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text, ElementName=SongNameTextBox, Converter={StaticResource StringToVisibilityConverter}}" />
                </Grid>
                <!-- Artist Name TextBox with Placeholder -->
                <Grid>
                    <TextBox x:Name="ArtistNameTextBox"
                             Style="{StaticResource DreamTextBox}"
                             Height="40"
                             Margin="0,0,0,15" />
                    <TextBlock Text="Enter Artist Name"
                               Foreground="#9E9E9E"
                               Margin="10,8,0,0"
                               FontSize="13"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text, ElementName=ArtistNameTextBox, Converter={StaticResource StringToVisibilityConverter}}" />
                </Grid>
                <Button x:Name="VocalUploadButton"
                        Style="{StaticResource DreamButton}"
                        Content="Upload Vocal Track"
                        Height="40"
                        Margin="0,0,0,10" />
                <TextBlock x:Name="VocalFileNameText"
                           Text="No vocal file selected"
                           Margin="0,0,0,15"
                           Foreground="#9E9E9E" />
                <Button x:Name="MusicUploadButton"
                        Style="{StaticResource DreamButton}"
                        Content="Upload Music Track"
                        Height="40"
                        Margin="0,0,0,10" />
                <TextBlock x:Name="MusicFileNameText"
                           Text="No music file selected"
                           Margin="0,0,0,15"
                           Foreground="#9E9E9E" />
                <Button x:Name="ConfirmUploadButton"
                        Style="{StaticResource DreamButton}"
                        Background="#4B4DED"
                        Content="Confirm Upload"
                        Height="40"
                        Margin="0,0,0,20" />
                <!-- Volume Controls -->
                <TextBlock Text="Volume Controls"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,10,0,15" />
                <StackPanel>
                    <TextBlock Text="General Volume"
                               Foreground="#9E9E9E"
                               FontSize="13"
                               Margin="0,0,0,5" />
                    <Slider x:Name="GeneralVolumeSlider"
                            Style="{StaticResource DreamSlider}"
                            Minimum="0"
                            Maximum="100"
                            Value="50" />
                    <TextBlock Text="Vocal Volume"
                               Foreground="#9E9E9E"
                               FontSize="13"
                               Margin="0,15,0,5" />
                    <Slider x:Name="VocalVolumeSlider"
                            Style="{StaticResource DreamSlider}"
                            Minimum="0"
                            Maximum="100"
                            Value="50" />
                    <TextBlock Text="Music Volume"
                               Foreground="#9E9E9E"
                               FontSize="13"
                               Margin="0,15,0,5" />
                    <Slider x:Name="MusicVolumeSlider"
                            Style="{StaticResource DreamSlider}"
                            Minimum="0"
                            Maximum="100"
                            Value="50" />
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Main Content Area -->
        <Grid Grid.Column="1"
              Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!-- Left Column -->
                <Grid Grid.Column="0"
                      Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <!-- Header Display -->
                    <Border Grid.Column="0"
                            Background="#1E1E3A"
                            BorderBrush="#3A3A5A"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Header with Maximize Button -->
                            <Grid Grid.Row="0"
                                  Background="#2A2A4A">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                            </Grid>
                            <Border>
                                <!-- Header -->
                                <Grid Grid.Row="0"
                                      Background="#2A2A4A">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Margin="15,10"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Grid.Column="0">
                                        <Run Text="Currently Playing" />
                                        <Run Text="{Binding CurrentSong.Title}" />
                                        <Run Text="By" />
                                        <Run Text="{Binding CurrentSong.Artist}" />
                                    </TextBlock>
                                    <Button x:Name="MaximizeLyricsButton"
                                            Grid.Column="1"
                                            Style="{StaticResource DreamButton}"
                                            Content="🗖"
                                            Width="40"
                                            Height="40"
                                            Margin="10" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- Lyrics Display -->
                    <Border>
                        <Grid Grid.Row="1"
                              Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!-- Lyrics Text -->
                            <Grid VerticalAlignment="Center"
                                  HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="CurrentLyricTextBlock"
                                           Text="Line 1"
                                           FontSize="32"
                                           TextAlignment="Center"
                                           Foreground="White"
                                           Margin="0,0,0,10" />
                                <TextBlock x:Name="NextLyricTextBlock"
                                           Grid.Row="1"
                                           Text="Line 2"
                                           FontSize="32"
                                           TextAlignment="Center"
                                           Foreground="White" />
                            </Grid>
                            <!-- Controls -->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,15,0,0">
                                <Button x:Name="PlayButton"
                                        Style="{StaticResource DreamButton}"
                                        Content="Play"
                                        Width="120"
                                        Height="40"
                                        Margin="0,0,15,0" />
                                <Button x:Name="ResumePauseButton"
                                        Style="{StaticResource DreamButton}"
                                        Content="Resume/Pause"
                                        Width="120"
                                        Height="40"
                                        Margin="0,0,15,0" />
                                <Button x:Name="SkipButton"
                                        Style="{StaticResource DreamButton}"
                                        Content="Skip"
                                        Width="120"
                                        Height="40"
                                        Margin="0,0,15,0" />
                                <Button x:Name="ToggleShufflingButton"
                                        Style="{StaticResource DreamButton}"
                                        Content="Shuffling"
                                        Width="120"
                                        Height="40"
                                        Margin="0,0,15,0" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- Current Playlist -->
                    <Border Grid.Row="1"
                            Background="#1E1E3A"
                            BorderBrush="#3A3A5A"
                            BorderThickness="1"
                            CornerRadius="8">
                        <DockPanel Margin="15">
                            <TextBlock Text="Current Playlist"
                                       DockPanel.Dock="Top"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,15" />
                            <ListBox x:Name="SongListView"
                                     Style="{StaticResource DreamListBox}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="Padding"
                                                Value="8,5" />
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Border"
                                                            Background="{TemplateBinding Background}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter VerticalAlignment="Center" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                            <Setter TargetName="Border"
                                                                    Property="Background"
                                                                    Value="#334B4DED" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical"
                                                    Margin="5">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="White"
                                                       FontSize="13"
                                                       Margin="0,0,10,0" />
                                            <TextBlock Text="{Binding Artist}"
                                                       Foreground="#9E9E9E"
                                                       FontSize="13" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ContextMenu>
                                    <ContextMenu Style="{StaticResource DreamContextMenu}"
                                                 Width="150"
                                                 Height="80">
                                        <MenuItem Header="Play Now"
                                                  Name="PlayNowPlaylistMenuItem"
                                                  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                            <MenuItem.Icon>
                                                <Image Source="pack://application:,,,/Assets/play_icon.png"
                                                       Width="20"
                                                       Height="20" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Remove Song"
                                                  Name="RemoveSongPlaylistMenuItem"
                                                  DataContext="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                            <MenuItem.Icon>
                                                <Image Source="pack://application:,,,/Assets/delete_icon.png"
                                                       Width="20"
                                                       Height="20" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                            </ListBox>
                        </DockPanel>
                    </Border>
                </Grid>
                <!-- Right Column (Song Library) -->
                <Border Grid.Column="1"
                        Background="#1E1E3A"
                        BorderBrush="#3A3A5A"
                        BorderThickness="1"
                        CornerRadius="8">
                    <DockPanel Margin="15">
                        <!-- Song Library Header -->
                        <TextBlock Text="Song Library"
                                   DockPanel.Dock="Top"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,15" />
                        <!-- Basic List Container with DreamListBox Style -->
                        <ListBox x:Name="SongLibraryList"
                                 Style="{StaticResource DreamListBox}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem"
                                       BasedOn="{StaticResource DreamListBoxItem}" />
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>